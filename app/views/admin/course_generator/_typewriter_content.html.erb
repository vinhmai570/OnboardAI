<div id="typewriter-container" class="markdown-content" style="position: relative;">
  <div id="typewriter-content" style="opacity: 0;">
    <%= render_markdown(markdown) %>
  </div>
  <div id="typewriter-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: transparent; z-index: 10;">
    <div class="typing-cursor">|</div>
  </div>
</div>

<style>
@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

.typing-cursor {
  display: inline;
  animation: blink 1s infinite;
  font-weight: bold;
  color: #3b82f6;
}

.typewriter-reveal {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>
