<%= turbo_stream_from "course_generator_#{@session_id}" %>

<div class="min-h-screen bg-gray-50">
  <!-- Top Navigation -->
  <nav class="bg-white border-b border-gray-200 px-4 py-3">
    <div class="flex items-center justify-between max-w-6xl mx-auto">
      <div class="flex items-center space-x-4">
        <%= link_to admin_course_generator_index_path, class: "text-blue-600 hover:text-blue-800" do %>
          <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Chat
        <% end %>
        <h1 class="text-xl font-semibold text-gray-900">Course Structure</h1>
      </div>
      <div class="flex items-center space-x-4">
        <%= link_to "Dashboard", admin_dashboard_path, class: "text-gray-600 hover:text-gray-900" %>
        <%= link_to "Documents", admin_documents_path, class: "text-gray-600 hover:text-gray-900" %>
        <%= link_to "Logout", logout_path, method: :delete, class: "text-red-600 hover:text-red-900" %>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto py-8 px-4">
    <div class="bg-white rounded-lg shadow-lg p-6">
      <% if @loading && !@course_structure %>
        <!-- Loading State -->
        <div id="structure-loading" class="text-center py-12">
          <div class="inline-flex items-center justify-center space-x-2">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
            <span class="text-lg text-gray-600">Generating course structure...</span>
          </div>
          <p class="text-gray-500 mt-2">This may take a few moments. Please wait.</p>
          <div class="mt-4">
            <div class="bg-blue-50 rounded-lg p-4 max-w-md mx-auto">
              <div class="flex items-center space-x-2">
                <div class="h-2 w-2 bg-blue-400 rounded-full animate-pulse"></div>
                <div class="text-sm text-blue-800">AI is analyzing your course requirements...</div>
              </div>
              <div class="mt-2 flex items-center space-x-2">
                <div class="h-2 w-2 bg-blue-400 rounded-full animate-pulse delay-200"></div>
                <div class="text-sm text-blue-800">Creating structured learning modules...</div>
              </div>
              <div class="mt-2 flex items-center space-x-2">
                <div class="h-2 w-2 bg-blue-400 rounded-full animate-pulse delay-400"></div>
                <div class="text-sm text-blue-800">Organizing content and assessments...</div>
              </div>
            </div>
          </div>
        </div>
      <% elsif @course && @course_modules.any? %>
        <!-- Course Structure from Database Models -->
        <div id="structure-content" class="max-w-none"
             data-controller="course-structure"
             data-course-structure-course-id-value="<%= @course.id %>">
          <div class="mb-6 p-4 bg-green-50 rounded-lg border border-green-200">
            <h2 class="text-green-800 text-lg font-semibold mb-2">✅ Course Structure Loaded Successfully</h2>
            <p class="text-green-700 text-sm">Course loaded from database with structured modules and steps.</p>
            <p class="text-green-700 text-sm mt-2">
              Course ID: <%= @course.id %> | Title: <%= @course.title %> |
              Modules: <%= @course.total_modules %> | Steps: <%= @course.total_steps %>
            </p>
          </div>

          <!-- Course Structure from Models -->
          <div class="bg-white border rounded-lg p-4">
            <h1 class="text-2xl font-bold text-gray-900 mb-4"><%= @course.title %></h1>

            <% if @course.structure && @course.structure['overview'] %>
              <p class="text-gray-600 mb-4"><%= @course.structure['overview'] %></p>
            <% end %>

                        <!-- Modules Container (Sortable) -->
            <div id="modules-container" class="space-y-4" data-course-id="<%= @course.id %>">
              <% @course_modules.each_with_index do |course_module, index| %>
                <div class="module-item border border-gray-200 rounded-lg p-4" data-module-id="<%= course_module.id %>">
                  <!-- Module Header -->
                  <div class="flex justify-between items-center mb-3">
                    <div class="flex items-center">
                      <span class="drag-handle cursor-move text-gray-400 mr-3" title="Drag to reorder">⋮⋮</span>
                      <h3 class="text-lg font-semibold text-gray-800 module-title" data-field="title">
                        <%= course_module.title %>
                      </h3>
                    </div>
                    <div class="flex items-center space-x-4">
                      <span class="text-sm text-gray-500" data-field="duration"><%= course_module.duration_hours %>h</span>
                      <span class="text-sm text-gray-500"><%= course_module.course_steps.count %> steps</span>
                                            <button class="text-blue-600 hover:text-blue-800 text-sm"
                              data-action="click->course-structure#editModule"
                              data-module-id="<%= course_module.id %>"
                              data-title="<%= course_module.title %>"
                              data-description="<%= course_module.description %>"
                              data-duration="<%= course_module.duration_hours %>">
                        ✏️ Edit
                      </button>
                      <button class="text-red-600 hover:text-red-800 text-sm"
                              data-action="click->course-structure#deleteModule"
                              data-module-id="<%= course_module.id %>">
                        🗑️ Delete
                      </button>
                    </div>
                  </div>

                  <% if course_module.description.present? %>
                    <p class="text-gray-600 text-sm mb-3" data-field="description"><%= course_module.description %></p>
                  <% end %>

                  <!-- Steps Container (Sortable) -->
                  <div class="steps-container space-y-2" data-module-id="<%= course_module.id %>">
                    <% if course_module.course_steps.any? %>
                      <% course_module.course_steps.ordered.each do |step| %>
                        <div class="step-item flex items-center justify-between py-2 px-3 bg-gray-50 rounded text-sm"
                             data-step-id="<%= step.id %>" data-module-id="<%= course_module.id %>">
                          <span class="flex items-center">
                            <span class="drag-handle-step cursor-move text-gray-400 mr-2" title="Drag to reorder">⋮</span>
                            <span class="<%= step.assessment? ? 'text-red-600' : 'text-blue-600' %> mr-2">
                              <%= step.icon %>
                            </span>
                            <span class="step-title" data-field="title"><%= step.title %></span>
                          </span>
                          <div class="flex items-center space-x-2">
                            <span class="text-gray-500" data-field="duration"><%= step.duration_minutes %>min</span>
                                                        <button class="text-blue-600 hover:text-blue-800"
                                    data-action="click->course-structure#editStep"
                                    data-step-id="<%= step.id %>" data-module-id="<%= course_module.id %>"
                                    data-title="<%= step.title %>" data-type="<%= step.step_type %>"
                                    data-duration="<%= step.duration_minutes %>" data-content="<%= step.content %>">
                              ✏️
                            </button>
                            <button class="text-red-600 hover:text-red-800"
                                    data-action="click->course-structure#deleteStep"
                                    data-step-id="<%= step.id %>" data-module-id="<%= course_module.id %>">
                              🗑️
                            </button>
                          </div>
                        </div>
                      <% end %>
                    <% end %>

                    <!-- Add Step Button -->
                    <div class="mt-2">
                                            <button class="text-green-600 hover:text-green-800 text-sm"
                              data-action="click->course-structure#addStep"
                              data-module-id="<%= course_module.id %>">
                        ➕ Add Step
                      </button>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Add Module Button -->
            <div class="mt-4">
              <button class="bg-green-600 text-white px-4 py-2 rounded text-sm hover:bg-green-700"
                      data-action="click->course-structure#addModule">
                ➕ Add Module
              </button>
            </div>

            <div class="mt-4 pt-4 border-t flex justify-between items-center text-sm text-gray-600">
              <span>Total: <%= @course.total_duration_hours %>h</span>
              <% if @course.structure && @course.structure['referenced_documents']&.any? %>
                <span><%= @course.structure['referenced_documents'].length %> documents referenced</span>
              <% end %>
            </div>
          </div>

                    <!-- Action Buttons -->
          <div class="mt-8 pt-6 border-t border-gray-200 flex flex-wrap gap-4">
            <%= link_to admin_course_path(@course),
                class: "inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700" do %>
                            📖 View Full Course
            <% end %>
            <button class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700"
                    onclick="window.print()">
              🖨️ Print Structure
            </button>
          </div>

          <!-- Modals for Inline Editing - Always Rendered -->
          <!-- Module Edit Modal -->
          <div data-course-structure-target="moduleModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50"
               style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.5); z-index: 1000; display: none; align-items: center; justify-content: center;">
            <div class="bg-white rounded-lg p-6 w-96 max-w-full mx-4"
                 style="background-color: white; border-radius: 8px; padding: 24px; width: 400px; max-width: 90%; margin: 16px; box-shadow: 0 10px 25px rgba(0,0,0,0.3);">
              <h3 class="text-lg font-semibold mb-4" data-course-structure-target="moduleModalTitle">Add Module</h3>
              <form data-course-structure-target="moduleForm" data-action="submit->course-structure#submitModuleForm">
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                  <input type="text" data-course-structure-target="moduleTitle" class="w-full border border-gray-300 rounded px-3 py-2" required>
                </div>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                  <textarea data-course-structure-target="moduleDescription" class="w-full border border-gray-300 rounded px-3 py-2" rows="3"></textarea>
                </div>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Duration (hours)</label>
                  <input type="number" data-course-structure-target="moduleDuration" class="w-full border border-gray-300 rounded px-3 py-2" min="1" value="1">
                </div>
                <div class="flex justify-end space-x-2">
                  <button type="button" data-action="click->course-structure#cancelModule" class="px-4 py-2 text-gray-600 hover:text-gray-800">Cancel</button>
                  <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Save</button>
                </div>
              </form>
            </div>
          </div>

          <!-- Step Edit Modal -->
          <div data-course-structure-target="stepModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50"
               style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.5); z-index: 1000; display: none; align-items: center; justify-content: center;">
            <div class="bg-white rounded-lg p-6 w-96 max-w-full mx-4"
                 style="background-color: white; border-radius: 8px; padding: 24px; width: 400px; max-width: 90%; margin: 16px; box-shadow: 0 10px 25px rgba(0,0,0,0.3);">
              <h3 class="text-lg font-semibold mb-4" data-course-structure-target="stepModalTitle">Add Step</h3>
              <form data-course-structure-target="stepForm" data-action="submit->course-structure#submitStepForm">
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                  <input type="text" data-course-structure-target="stepTitle" class="w-full border border-gray-300 rounded px-3 py-2" required>
                </div>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Type</label>
                  <select data-course-structure-target="stepType" class="w-full border border-gray-300 rounded px-3 py-2">
                    <option value="lesson">📖 Lesson</option>
                    <option value="exercise">🏋️ Exercise</option>
                    <option value="assessment">📊 Assessment</option>
                    <option value="reading">📚 Reading</option>
                  </select>
                </div>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Duration (minutes)</label>
                  <input type="number" data-course-structure-target="stepDuration" class="w-full border border-gray-300 rounded px-3 py-2" min="5" value="30">
                </div>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Content</label>
                  <textarea data-course-structure-target="stepContent" class="w-full border border-gray-300 rounded px-3 py-2" rows="3"></textarea>
                </div>
                <div class="flex justify-end space-x-2">
                  <button type="button" data-action="click->course-structure#cancelStep" class="px-4 py-2 text-gray-600 hover:text-gray-800">Cancel</button>
                  <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Save</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      <% elsif @course_structure %>
        <!-- Structure Content -->
        <div id="structure-content" class="max-w-none">
                  <div class="mb-6 p-4 bg-yellow-50 rounded-lg border border-yellow-200">
          <h2 class="text-yellow-800 text-lg font-semibold mb-2">📋 Course Structure (JSON Format)</h2>
          <p class="text-yellow-700 text-sm">Displaying course structure from stored JSON data. This will be converted to structured models.</p>
          <% if @course %>
            <p class="text-yellow-700 text-sm mt-2">Course ID: <%= @course.id %> | Title: <%= @course.title %></p>
          <% end %>
        </div>

          <% if @course_structure.is_a?(Hash) %>
            <!-- Clean JSON Structure Display -->
            <div class="bg-white border rounded-lg p-4">
              <h1 class="text-2xl font-bold text-gray-900 mb-4"><%= @course_structure['title'] %></h1>

              <p class="text-gray-600 mb-4"><%= @course_structure['overview'] %></p>

              <div class="space-y-4">
                <% @course_structure['modules']&.each_with_index do |module_data, index| %>
                  <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex justify-between items-center mb-3">
                      <h3 class="text-lg font-semibold text-gray-800">
                        <%= index + 1 %>. <%= module_data['title'] %>
                      </h3>
                      <span class="text-sm text-gray-500"><%= module_data['duration_hours'] %>h</span>
                    </div>

                    <% if module_data['steps'] %>
                      <div class="space-y-2">
                        <% module_data['steps'].each_with_index do |step, step_index| %>
                          <div class="flex items-center justify-between py-2 px-3 bg-gray-50 rounded text-sm">
                            <span class="flex items-center">
                              <span class="<%= step['type'] == 'assessment' ? 'text-red-600' : 'text-blue-600' %> mr-2">
                                <%= step['type'] == 'assessment' ? '📊' : '📖' %>
                              </span>
                              <%= step['title'] %>
                            </span>
                            <span class="text-gray-500"><%= step['duration_minutes'] %>min</span>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>

              <div class="mt-4 pt-4 border-t flex justify-between items-center text-sm text-gray-600">
                <span>
                  <% if @course_structure['total_duration_hours'] %>
                    Total: <%= @course_structure['total_duration_hours'] %>h
                  <% end %>
                </span>
                <% if @course_structure['referenced_documents']&.any? %>
                  <span><%= @course_structure['referenced_documents'].length %> documents referenced</span>
                <% end %>
              </div>
            </div>
          <% else %>
            <!-- Fallback to Markdown Display -->
            <div class="markdown-content prose prose-lg max-w-none">
              <%= raw Redcarpet::Markdown.new(Redcarpet::Render::HTML.new(hard_wrap: true),
                                             autolink: true,
                                             tables: true,
                                             fenced_code_blocks: true).render(@course_structure) %>
            </div>
          <% end %>

          <!-- Action Buttons -->
          <div class="mt-8 pt-6 border-t border-gray-200 flex flex-wrap gap-4">
            <% if @course %>
              <%= link_to admin_course_path(@course),
                  class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700" do %>
                📚 View Full Course
              <% end %>
            <% end %>
            <button class="inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700">
              ➕ Add Module
            </button>
            <button class="inline-flex items-center px-4 py-2 bg-yellow-600 text-white text-sm font-medium rounded-lg hover:bg-yellow-700">
              📝 Export JSON
            </button>
            <button class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700"
                    onclick="window.print()">
              🖨️ Print Structure
            </button>
          </div>
        </div>
      <% else %>
        <!-- Error State -->
        <div class="text-center py-12">
          <div class="text-red-600 text-6xl mb-4">⚠️</div>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">No Course Structure Found</h2>
          <p class="text-gray-600 mb-6">Unable to find course structure for this session.</p>
          <%= link_to "Return to Course Generator", admin_course_generator_index_path,
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



<!-- Auto-refresh script for loading state -->
<% if @loading && !@course_structure %>
  <script>
    // Auto-refresh every 3 seconds while loading
    setTimeout(() => {
      window.location.reload();
    }, 3000);
  </script>
<% end %>

<!-- SortableJS for drag & drop functionality -->
<% if @course && @course_modules.any? %>
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
<% end %>

