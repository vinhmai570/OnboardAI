<!-- Auto-refresh page every 10 seconds to show processing updates -->
<% if @documents.any? { |doc| doc.processing_status == 'processing' || !doc.ai_ready? } %>
  <meta http-equiv="refresh" content="15">
<% end %>

<div class="min-h-screen bg-gray-50">
  <nav class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <h1 class="text-2xl font-bold text-gray-900">OnboardAI Admin</h1>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Dashboard", admin_dashboard_path, class: "text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "Logout", logout_path, method: :delete, class: "text-red-600 hover:text-red-900" %>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="mb-8">
        <div class="flex justify-between items-center">
          <div>
            <h2 class="text-3xl font-bold text-gray-900">Documents</h2>
            <p class="mt-2 text-gray-600">Manage documents for AI processing and course creation.</p>
          </div>
          <div class="flex space-x-3">
            <%= link_to "Upload Document", new_admin_document_path,
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <button type="button" id="bulk-delete-btn" style="display: none;"
                    onclick="confirmBulkDelete()"
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
              Delete Selected
            </button>
          </div>
        </div>
      </div>

            <%= form_with url: bulk_delete_admin_documents_path, method: :delete, local: true, id: "bulk-delete-form" do |form| %>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <% if @documents.any? %>
            <!-- Select All Header -->
            <div class="px-4 py-3 bg-gray-50 border-b border-gray-200">
              <div class="flex items-center">
                <input type="checkbox" id="select-all"
                       class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                       onchange="toggleAllCheckboxes(this)">
                <label for="select-all" class="ml-2 text-sm font-medium text-gray-700">
                  Select All Documents
                </label>
              </div>
            </div>

            <ul class="divide-y divide-gray-200">
              <% @documents.each do |document| %>
                <li>
                  <div class="px-4 py-4 flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <!-- Checkbox for bulk selection -->
                      <input type="checkbox" name="document_ids[]" value="<%= document.id %>"
                             class="document-checkbox h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                             onchange="updateBulkDeleteButton()">

                      <div>
                        <div class="text-sm font-medium text-gray-900">
                          <%= document.title %>
                        </div>
                        <div class="text-sm text-gray-500">
                          <% if document.file.attached? %>
                            <%= document.file_type %> ‚Ä¢ <%= document.file_size_human %> ‚Ä¢
                          <% end %>
                          Uploaded by <%= document.user.email %> ‚Ä¢ <%= time_ago_in_words(document.created_at) %> ago
                        </div>
                      </div>
                    </div>
                  <div class="flex items-center space-x-2">
                    <% case document.processing_status %>
                    <% when 'completed' %>
                      <% if document.ai_ready? %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          ü§ñ AI Ready (<%= document.document_chunks.count %> chunks)
                        </span>
                      <% elsif document.embeddings_progress > 0 %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          üîÑ Embeddings <%= document.embeddings_progress.to_i %>%
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                          üìù Processing Embeddings...
                        </span>
                      <% end %>
                    <% when 'failed' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        ‚ùå Processing Failed
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        ‚è≥ Processing Text...
                      </span>
                    <% end %>
                    <%= link_to "Edit", edit_admin_document_path(document), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                    <%= link_to "Delete", admin_document_path(document),
                        method: :delete,
                        data: {
                          confirm: "Are you sure you want to delete '#{document.title}'?\n\nThis will permanently remove:\n‚Ä¢ The document file (#{document.file_size_human rescue 'Unknown size'})\n‚Ä¢ All #{document.document_chunks.count} processed text chunks\n‚Ä¢ All generated AI embeddings\n\nThis action cannot be undone!"
                        },
                        class: "text-red-600 hover:text-red-900 text-sm font-medium" %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
          <% else %>
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No documents</h3>
              <p class="mt-1 text-sm text-gray-500">Get started by uploading your first document.</p>
              <div class="mt-6">
                <%= link_to "Upload Document", new_admin_document_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
// Bulk selection functionality
function toggleAllCheckboxes(selectAllCheckbox) {
  const checkboxes = document.querySelectorAll('.document-checkbox');
  checkboxes.forEach(checkbox => {
    checkbox.checked = selectAllCheckbox.checked;
  });
  updateBulkDeleteButton();
}

function updateBulkDeleteButton() {
  const checkboxes = document.querySelectorAll('.document-checkbox');
  const checkedBoxes = document.querySelectorAll('.document-checkbox:checked');
  const bulkDeleteBtn = document.getElementById('bulk-delete-btn');
  const selectAllCheckbox = document.getElementById('select-all');

  // Show/hide bulk delete button based on selection
  if (checkedBoxes.length > 0) {
    bulkDeleteBtn.style.display = 'inline-flex';
    bulkDeleteBtn.textContent = `Delete Selected (${checkedBoxes.length})`;
  } else {
    bulkDeleteBtn.style.display = 'none';
  }

  // Update select all checkbox state
  if (checkedBoxes.length === checkboxes.length && checkboxes.length > 0) {
    selectAllCheckbox.checked = true;
    selectAllCheckbox.indeterminate = false;
  } else if (checkedBoxes.length > 0) {
    selectAllCheckbox.checked = false;
    selectAllCheckbox.indeterminate = true;
  } else {
    selectAllCheckbox.checked = false;
    selectAllCheckbox.indeterminate = false;
  }
}

function confirmBulkDelete() {
  const checkedBoxes = document.querySelectorAll('.document-checkbox:checked');
  const count = checkedBoxes.length;

  if (count === 0) {
    alert('No documents selected for deletion.');
    return;
  }

  // Get document titles for confirmation
  const titles = Array.from(checkedBoxes).map(cb => {
    const row = cb.closest('li');
    return row.querySelector('.text-sm.font-medium').textContent.trim();
  });

  const confirmMessage = `Are you sure you want to delete ${count} document${count > 1 ? 's' : ''}?\n\nDocuments to be deleted:\n${titles.map(title => `‚Ä¢ ${title}`).join('\n')}\n\nThis will permanently remove:\n‚Ä¢ All document files\n‚Ä¢ All processed text chunks\n‚Ä¢ All generated AI embeddings\n\nThis action cannot be undone!`;

  if (confirm(confirmMessage)) {
    document.getElementById('bulk-delete-form').submit();
  }
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
  updateBulkDeleteButton();
});
</script>
