<div class="min-h-screen bg-gray-50">
  <nav class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center space-x-4">
          <%= link_to admin_dashboard_path, class: "text-blue-600 hover:text-blue-800" do %>
            <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Dashboard
          <% end %>
          <h1 class="text-xl font-bold text-gray-900">ðŸ“Š Progress Analytics</h1>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Export", export_analytics_admin_progress_analytics_path(format: :csv), class: "text-sm text-gray-600 hover:text-gray-900" %>
          <%= link_to "Logout", logout_path, method: :delete, class: "text-sm text-red-600 hover:text-red-900" %>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto py-4 sm:px-6 lg:px-8">
    <div class="px-4 py-4 sm:px-0">

      <!-- Key Metrics -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white p-4 rounded-lg shadow-sm border">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600">Enrolled Users</p>
              <p class="text-2xl font-bold text-blue-600"><%= @analytics[:total_enrolled_users] %></p>
            </div>
            <div class="h-8 w-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="h-4 w-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white p-4 rounded-lg shadow-sm border">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600">Completion Rate</p>
              <p class="text-2xl font-bold text-green-600"><%= @analytics[:average_completion_rate] %>%</p>
            </div>
            <div class="h-8 w-8 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="h-4 w-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white p-4 rounded-lg shadow-sm border">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600">Active This Month</p>
              <p class="text-2xl font-bold text-purple-600"><%= @analytics[:active_users_this_month] %></p>
            </div>
            <div class="h-8 w-8 bg-purple-100 rounded-lg flex items-center justify-center">
              <svg class="h-4 w-4 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white p-4 rounded-lg shadow-sm border">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600">Active Courses</p>
              <p class="text-2xl font-bold text-orange-600"><%= @analytics[:courses_with_progress] %></p>
            </div>
            <div class="h-8 w-8 bg-orange-100 rounded-lg flex items-center justify-center">
              <svg class="h-4 w-4 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2v1a1 1 0 102 0V3h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L10.586 3H7V2a2 2 0 012-2H6a2 2 0 00-2 2v1H3a1 1 0 000 2v10a2 2 0 002 2h10a2 2 0 002-2V5a1 1 0 100-2h-1z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Course & User Performance -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

        <!-- Course Performance -->
        <div class="bg-white shadow-sm rounded-lg border">
          <div class="p-5">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Course Performance</h3>
            <div class="space-y-3 max-h-80 overflow-y-auto">
              <% if @course_analytics.any? %>
                <% @course_analytics.first(8).each do |course_data| %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex-1 min-w-0">
                      <p class="font-medium text-gray-900 truncate"><%= course_data[:course].title %></p>
                      <p class="text-sm text-gray-500">
                        <%= course_data[:completed_users] %>/<%= course_data[:total_assigned] %> completed
                        â€¢ <%= course_data[:total_steps] %> steps
                      </p>
                    </div>
                    <div class="flex items-center space-x-2">
                      <div class="text-right">
                        <p class="text-sm font-semibold text-gray-900"><%= course_data[:completion_rate] %>%</p>
                        <div class="w-16 bg-gray-200 rounded-full h-1.5">
                          <div class="bg-blue-600 h-1.5 rounded-full" style="width: <%= course_data[:completion_rate] %>%"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <div class="text-center text-gray-500 py-8">
                  <p>No course data available yet.</p>
                  <p class="text-sm">Assign courses to users to see performance here.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- User Performance -->
        <div class="bg-white shadow-sm rounded-lg border">
          <div class="p-5">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Top User Progress</h3>
            <div class="space-y-3 max-h-80 overflow-y-auto">
              <% if @user_analytics.any? %>
                <% @user_analytics.first(8).each do |user_data| %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex items-center space-x-3">
                      <div class="h-8 w-8 bg-gray-300 rounded-full flex items-center justify-center">
                        <span class="text-sm font-medium text-gray-700">
                          <%= user_data[:user].email.first.upcase %>
                        </span>
                      </div>
                      <div class="flex-1 min-w-0">
                        <p class="font-medium text-gray-900 truncate"><%= user_data[:user].email %></p>
                        <p class="text-sm text-gray-500">
                          <%= user_data[:completed_courses] %>/<%= user_data[:total_courses] %> courses
                          <% if user_data[:average_quiz_score] > 0 %>
                            â€¢ <%= user_data[:average_quiz_score] %>% avg quiz
                          <% end %>
                        </p>
                      </div>
                    </div>
                    <div class="flex items-center space-x-2">
                      <div class="text-right">
                        <p class="text-sm font-semibold text-gray-900"><%= user_data[:overall_completion_percentage] %>%</p>
                        <div class="w-16 bg-gray-200 rounded-full h-1.5">
                          <div class="bg-green-600 h-1.5 rounded-full" style="width: <%= user_data[:overall_completion_percentage] %>%"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <div class="text-center text-gray-500 py-8">
                  <p>No user data available yet.</p>
                  <p class="text-sm">Users need to start courses to appear here.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <% if @recent_completions.any? %>
        <div class="bg-white shadow-sm rounded-lg border mt-6">
          <div class="p-5">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Completions</h3>
            <div class="space-y-2 max-h-60 overflow-y-auto">
              <% @recent_completions.first(10).each do |completion| %>
                <div class="flex items-center space-x-3 p-2 bg-gray-50 rounded">
                  <div class="h-6 w-6 bg-green-500 rounded-full flex items-center justify-center">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm text-gray-900">
                      <span class="font-medium"><%= completion.user.email %></span>
                      completed
                      <span class="font-medium"><%= completion.course_step.title %></span>
                    </p>
                    <p class="text-xs text-gray-500">
                      <%= time_ago_in_words(completion.completed_at) %> ago
                      <% if completion.score %>â€¢ Score: <%= completion.score %>%<% end %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
