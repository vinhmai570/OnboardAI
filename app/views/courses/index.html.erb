<% content_for :title, "Available Courses" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-6xl mx-auto px-4 py-6">
      <h1 class="text-2xl font-bold text-gray-900">Available Courses</h1>
      <p class="text-gray-600 mt-1">Start your learning journey with these courses</p>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 py-8">
    <% if @courses.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @courses.each do |course| %>
          <% progress_data = @user_progress_by_course&.dig(course.id) %>

          <div class="bg-white rounded-lg shadow-sm border hover:shadow-md transition-shadow">
            <!-- Course Header -->
            <div class="p-6 border-b">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">
                <%= link_to course.title, course_path(course), class: "hover:text-blue-600" %>
              </h3>

              <% if course.description.present? %>
                <p class="text-gray-600 text-sm mb-4">
                  <%= truncate(course.description, length: 120) %>
                </p>
              <% end %>

              <!-- Course Stats -->
              <div class="flex items-center space-x-4 text-sm text-gray-500">
                <span>📚 <%= course.course_modules.count %> modules</span>
                <span>🎯 <%= course.course_modules.sum { |m| m.course_steps.count } %> steps</span>
                <span>⏱️ <%= course.course_modules.sum(&:total_duration_minutes) %> min</span>
              </div>
            </div>

            <!-- Progress Section -->
            <div class="p-6">
              <% if current_user && progress_data && progress_data[:total_steps] > 0 %>
                <!-- User has progress -->
                <div class="mb-4">
                  <div class="flex justify-between text-sm text-gray-600 mb-2">
                    <span>Your Progress</span>
                    <span><%= progress_data[:completion_percentage].round(1) %>%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-green-500 h-2 rounded-full transition-all duration-500"
                         style="width: <%= [progress_data[:completion_percentage], 100].min %>%">
                    </div>
                  </div>
                  <div class="text-xs text-gray-500 mt-1">
                    <%= progress_data[:completed_steps] %>/<%= progress_data[:total_steps] %> steps completed
                  </div>
                </div>

                <div class="flex space-x-3">
                  <%= link_to course_path(course),
                              class: "flex-1 text-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" do %>
                    <% if progress_data[:completion_percentage] >= 100 %>
                      🏆 Review Course
                    <% elsif progress_data[:completion_percentage] > 0 %>
                      ▶️ Continue Learning
                    <% else %>
                      🚀 Start Course
                    <% end %>
                  <% end %>

                  <%= link_to course_progress_progress_index_path(course_id: course.id),
                              class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors" do %>
                    📊 Progress
                  <% end %>
                </div>
              <% elsif current_user %>
                <!-- User not enrolled -->
                <div class="text-center">
                  <p class="text-gray-600 text-sm mb-4">Ready to start learning?</p>
                  <div class="flex space-x-3">
                    <%= link_to course_path(course),
                                class: "flex-1 text-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" do %>
                      👁️ View Course
                    <% end %>
                    <%= link_to enroll_course_path(course),
                                method: :post,
                                class: "flex-1 text-center px-4 py-2 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors" do %>
                      📚 Enroll Now
                    <% end %>
                  </div>
                </div>
              <% else %>
                <!-- Not logged in -->
                <div class="text-center">
                  <p class="text-gray-600 text-sm mb-4">Log in to start learning</p>
                  <%= link_to new_session_path,
                              class: "inline-block px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" do %>
                    🔑 Login to Access
                  <% end %>
                </div>
              <% end %>
            </div>

            <!-- Quiz Count -->
            <% quiz_count = Quiz.joins(course_step: { course_module: :course }).where(courses: { id: course.id }).count %>
            <% if quiz_count > 0 %>
              <div class="px-6 pb-4">
                <div class="flex items-center text-sm text-purple-600">
                  <span class="mr-1">📝</span>
                  <span><%= quiz_count %> interactive <%= 'quiz'.pluralize(quiz_count) %> included</span>
                </div>
              </div>
            <% end %>

            <!-- Course Author -->
            <div class="px-6 py-3 bg-gray-50 border-t text-xs text-gray-500">
              Created by <%= course.admin.name || course.admin.email %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-6xl mb-4">📚</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No Courses Available</h3>
        <p class="text-gray-600 mb-6">
          There are no published courses at the moment. Check back soon!
        </p>
        <% if current_user&.admin? %>
          <%= link_to admin_course_generator_index_path,
                      class: "inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700" do %>
            ➕ Create New Course
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
// Animate progress bars on page load
document.addEventListener('DOMContentLoaded', function() {
  const progressBars = document.querySelectorAll('[style*="width:"]');
  progressBars.forEach((bar, index) => {
    const finalWidth = bar.style.width;
    bar.style.width = '0%';
    setTimeout(() => {
      bar.style.width = finalWidth;
    }, 300 + (index * 100));
  });
});
</script>
