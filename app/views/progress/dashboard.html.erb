<% content_for :title, "Learning Analytics Dashboard" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Learning Analytics Dashboard</h1>
          <p class="text-gray-600 mt-1">Monitor learning progress and quiz performance across all courses</p>
        </div>
        <div class="text-sm text-gray-500">
          Last updated: <%= Time.current.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Overview Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex items-center justify-center h-12 w-12 bg-blue-500 rounded-md">
              <span class="text-white text-xl">üë•</span>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900"><%= @total_users %></div>
            <div class="text-sm text-gray-600">Total Users</div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex items-center justify-center h-12 w-12 bg-green-500 rounded-md">
              <span class="text-white text-xl">üìö</span>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900"><%= @total_courses %></div>
            <div class="text-sm text-gray-600">Active Courses</div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex items-center justify-center h-12 w-12 bg-purple-500 rounded-md">
              <span class="text-white text-xl">üìù</span>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900"><%= @total_quizzes %></div>
            <div class="text-sm text-gray-600">Total Quizzes</div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex items-center justify-center h-12 w-12 bg-orange-500 rounded-md">
              <span class="text-white text-xl">üéØ</span>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900">
              <%= @recent_quiz_attempts.joins(:quiz).where('quiz_attempts.completed_at > ?', 7.days.ago).count %>
            </div>
            <div class="text-sm text-gray-600">Quizzes This Week</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Course Performance Overview -->
    <div class="bg-white rounded-lg shadow-sm mb-8">
      <div class="px-6 py-4 border-b bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-900">Course Performance Overview</h2>
        <p class="text-sm text-gray-600">Enrollment and completion statistics by course</p>
      </div>

      <div class="p-6">
        <% if @course_stats.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="text-left py-3 px-4 font-medium text-gray-900">Course</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-900">Enrollment</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-900">Completion Rate</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-900">Avg Quiz Score</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-900">Content</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @course_stats.each do |stats| %>
                  <tr class="hover:bg-gray-50">
                    <td class="py-4 px-4">
                      <div class="font-medium text-gray-900"><%= stats[:course].title %></div>
                      <div class="text-sm text-gray-600"><%= truncate(stats[:course].description, length: 60) %></div>
                    </td>
                    <td class="py-4 px-4">
                      <div class="text-lg font-semibold text-blue-600"><%= stats[:enrolled_users] %></div>
                      <div class="text-sm text-gray-600">
                        <%= stats[:completed_users] %> completed
                      </div>
                    </td>
                    <td class="py-4 px-4">
                      <div class="flex items-center">
                        <div class="flex-1">
                          <div class="text-sm font-medium text-gray-900 mb-1">
                            <%= stats[:completion_rate].round(1) %>%
                          </div>
                          <div class="w-20 bg-gray-200 rounded-full h-2">
                            <div class="<%= stats[:completion_rate] >= 70 ? 'bg-green-500' : stats[:completion_rate] >= 40 ? 'bg-yellow-500' : 'bg-red-500' %> h-2 rounded-full"
                                 style="width: <%= [stats[:completion_rate], 100].min %>%"></div>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="py-4 px-4">
                      <div class="text-lg font-semibold <%= stats[:avg_quiz_score] >= 70 ? 'text-green-600' : stats[:avg_quiz_score] >= 50 ? 'text-yellow-600' : 'text-red-600' %>">
                        <%= stats[:avg_quiz_score].round(1) %>%
                      </div>
                      <div class="text-sm text-gray-600">
                        <%= stats[:total_quizzes] %> quizzes
                      </div>
                    </td>
                    <td class="py-4 px-4 text-sm text-gray-600">
                      <%= stats[:total_steps] %> steps
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-8">
            <div class="text-4xl mb-2">üìä</div>
            <p class="text-gray-600">No course performance data available yet.</p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Recent Completions -->
      <div class="bg-white rounded-lg shadow-sm">
        <div class="px-6 py-4 border-b bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-900">Recent Step Completions</h3>
          <p class="text-sm text-gray-600">Latest learning progress updates</p>
        </div>

        <div class="p-6">
          <% if @recent_completions.any? %>
            <div class="space-y-4">
              <% @recent_completions.each do |progress| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                      <span class="text-green-600 text-sm">‚úì</span>
                    </div>
                    <div>
                      <div class="font-medium text-gray-900">
                        <%= progress.user.name || progress.user.email %>
                      </div>
                      <div class="text-sm text-gray-600">
                        <%= progress.course_step.title %>
                      </div>
                      <div class="text-xs text-gray-500">
                        <%= progress.course_step.course_module.course.title %>
                      </div>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-sm text-gray-600">
                      <%= time_ago_in_words(progress.completed_at) %> ago
                    </div>
                    <% if progress.score %>
                      <div class="text-sm font-medium <%= progress.score >= 70 ? 'text-green-600' : 'text-yellow-600' %>">
                        <%= progress.score %>%
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6">
              <div class="text-2xl mb-2">üìà</div>
              <p class="text-gray-600">No recent completions</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Quiz Attempts -->
      <div class="bg-white rounded-lg shadow-sm">
        <div class="px-6 py-4 border-b bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-900">Recent Quiz Attempts</h3>
          <p class="text-sm text-gray-600">Latest quiz performance</p>
        </div>

        <div class="p-6">
          <% if @recent_quiz_attempts.any? %>
            <div class="space-y-4">
              <% @recent_quiz_attempts.each do |attempt| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0 w-8 h-8 <%= attempt.passed? ? 'bg-green-100' : 'bg-yellow-100' %> rounded-full flex items-center justify-center">
                      <span class="<%= attempt.passed? ? 'text-green-600' : 'text-yellow-600' %> text-sm">
                        <%= attempt.passed? ? '‚úì' : '‚óã' %>
                      </span>
                    </div>
                    <div>
                      <div class="font-medium text-gray-900">
                        <%= attempt.user.name || attempt.user.email %>
                      </div>
                      <div class="text-sm text-gray-600">
                        <%= attempt.quiz.title %>
                      </div>
                      <div class="text-xs text-gray-500">
                        <%= attempt.quiz.course_step.course_module.course.title %>
                      </div>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-lg font-semibold <%= attempt.passed? ? 'text-green-600' : 'text-yellow-600' %>">
                      <%= attempt.percentage_score.round(1) %>%
                    </div>
                    <div class="text-sm text-gray-600">
                      <%= time_ago_in_words(attempt.completed_at) %> ago
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= attempt.time_spent_minutes %>m
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6">
              <div class="text-2xl mb-2">üìù</div>
              <p class="text-gray-600">No recent quiz attempts</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Top Learners -->
    <% if @top_learners.any? %>
      <div class="bg-white rounded-lg shadow-sm mt-8">
        <div class="px-6 py-4 border-b bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-900">Top Performers</h3>
          <p class="text-sm text-gray-600">Users with highest average quiz scores</p>
        </div>

        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @top_learners.each_with_index do |learner, index| %>
              <div class="flex items-center p-4 <%= index < 3 ? 'bg-gradient-to-r from-yellow-50 to-yellow-100 border border-yellow-200' : 'bg-gray-50' %> rounded-lg">
                <div class="flex-shrink-0 w-10 h-10 <%= index < 3 ? 'bg-yellow-100' : 'bg-gray-100' %> rounded-full flex items-center justify-center mr-3">
                  <% if index == 0 %>
                    <span class="text-yellow-600 text-lg">ü•á</span>
                  <% elsif index == 1 %>
                    <span class="text-gray-600 text-lg">ü•à</span>
                  <% elsif index == 2 %>
                    <span class="text-orange-600 text-lg">ü•â</span>
                  <% else %>
                    <span class="text-gray-600 font-bold"><%= index + 1 %></span>
                  <% end %>
                </div>
                <div class="flex-1">
                  <div class="font-medium text-gray-900">
                    <%= learner.name || learner.email %>
                  </div>
                  <div class="text-sm text-gray-600">
                    Average: <span class="font-semibold text-green-600"><%= learner.avg_score.round(1) %>%</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
