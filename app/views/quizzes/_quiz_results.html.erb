<div id="quiz-container" class="bg-white rounded-lg shadow-sm">
  <!-- Results Header -->
  <div class="text-center py-12 px-6 border-b">
    <% if attempt.passed? %>
      <div class="text-6xl mb-4">üéâ</div>
      <h2 class="text-3xl font-bold text-green-600 mb-2">Congratulations!</h2>
      <p class="text-lg text-gray-600 mb-4">You passed the quiz!</p>
    <% else %>
      <div class="text-6xl mb-4">üìö</div>
      <h2 class="text-3xl font-bold text-orange-600 mb-2">Keep Learning!</h2>
      <p class="text-lg text-gray-600 mb-4">You can retake this quiz to improve your score.</p>
    <% end %>

    <!-- Score Summary -->
    <div class="bg-gray-50 rounded-lg p-6 max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 text-center mb-6">
        <div>
          <div class="text-3xl font-bold <%= attempt.passed? ? 'text-green-600' : 'text-orange-600' %>">
            <%= attempt.percentage_score.round(1) %>%
          </div>
          <div class="text-sm text-gray-600">Final Score</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-gray-900">
            <%= attempt.score %>/<%= attempt.total_points %>
          </div>
          <div class="text-sm text-gray-600">Points Earned</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-green-600">
            <%= questions_with_responses.count { |q| q[:is_correct] } %>/<%= questions_with_responses.count %>
          </div>
          <div class="text-sm text-gray-600">Correct Answers</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-purple-600">
            <%= attempt.time_spent_minutes %>m
          </div>
          <div class="text-sm text-gray-600">Time Spent</div>
        </div>
      </div>

      <!-- Pass/Fail Status -->
      <div class="text-center">
        <% if attempt.passed? %>
          <div class="inline-flex items-center px-4 py-2 bg-green-100 text-green-800 rounded-full font-semibold">
            ‚úÖ PASSED (70%+ required)
          </div>
        <% else %>
          <div class="inline-flex items-center px-4 py-2 bg-orange-100 text-orange-800 rounded-full font-semibold">
            üìù NEEDS IMPROVEMENT (70%+ required to pass)
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Detailed Question Review -->
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-6">Question Review</h3>

    <div class="space-y-6">
      <% questions_with_responses.each_with_index do |item, index| %>
        <div class="border rounded-lg p-6 <%= item[:is_correct] ? 'bg-green-50 border-green-200' : 'bg-red-50 border-red-200' %>">
          <!-- Question Header -->
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center space-x-3">
              <span class="bg-gray-100 text-gray-800 text-sm font-medium px-3 py-1 rounded-full">
                Q<%= index + 1 %>
              </span>
              <span class="text-sm text-gray-500"><%= item[:question].points %> points</span>
              <% if item[:is_correct] %>
                <span class="inline-flex items-center text-green-600">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Correct
                </span>
              <% else %>
                <span class="inline-flex items-center text-red-600">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                  Incorrect
                </span>
              <% end %>
            </div>
            <div class="text-right">
              <div class="font-semibold <%= item[:is_correct] ? 'text-green-600' : 'text-red-600' %>">
                <%= item[:points_earned] %>/<%= item[:question].points %> pts
              </div>
            </div>
          </div>

          <!-- Question Text -->
          <h4 class="text-lg font-medium text-gray-900 mb-4">
            <%= simple_format(item[:question].question_text) %>
          </h4>

          <!-- Answer Details -->
          <div class="space-y-3">
            <% if item[:question].question_type == 'short_answer' %>
              <!-- Short Answer Display -->
              <div>
                <div class="text-sm font-medium text-gray-700 mb-1">Your Answer:</div>
                <div class="bg-white p-3 rounded border text-gray-900">
                  <%= simple_format(item[:user_answer] || 'No answer provided') %>
                </div>
              </div>
            <% else %>
              <!-- Multiple Choice / True-False Display -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <div class="text-sm font-medium text-gray-700 mb-1">Your Answer:</div>
                  <div class="bg-white p-3 rounded border">
                    <span class="<%= item[:is_correct] ? 'text-green-700' : 'text-red-700' %>">
                      <%= item[:user_answer] || 'No answer selected' %>
                      <%= item[:is_correct] ? '‚úì' : '‚úó' %>
                    </span>
                  </div>
                </div>
                <% unless item[:is_correct] %>
                  <div>
                    <div class="text-sm font-medium text-gray-700 mb-1">Correct Answer:</div>
                    <div class="bg-green-50 border border-green-200 p-3 rounded">
                      <span class="text-green-700"><%= item[:correct_answer] %> ‚úì</span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>

            <!-- Explanation -->
            <% if item[:explanation].present? %>
              <div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded">
                <div class="text-sm font-medium text-blue-800 mb-1">üí° Explanation:</div>
                <div class="text-sm text-blue-700">
                  <%= simple_format(item[:explanation]) %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="border-t p-6 bg-gray-50">
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button onclick="window.courseDocsController?.retakeQuiz(<%= quiz.id %>)"
              class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-semibold">
        üîÑ Retake Quiz
      </button>

      <%= link_to results_quiz_path(quiz),
                  class: "px-6 py-3 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors font-semibold text-center" do %>
        üìä View Full Results
      <% end %>
    </div>
  </div>
</div>
